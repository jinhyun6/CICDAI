# Copy this file to .env and fill in the values

# Basic settings
PROJECT_NAME="CI/CD AI"
VERSION="0.1.0"
SECRET_KEY="your-secret-key-change-this-to-random-string"

# Database
DATABASE_URL="postgresql+asyncpg://user:password@localhost/cicdai"

# Redis (optional)
REDIS_URL="redis://localhost:6379"

# GitHub OAuth
# 1. Go to https://github.com/settings/developers
# 2. Create a new OAuth App
# 3. Set Authorization callback URL to: http://localhost:8000/api/auth/github/callback
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Google Cloud OAuth
# 1. Go to https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID
# 3. Add authorized redirect URI: http://localhost:8000/api/auth/google/callback
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Encryption key for storing user tokens (generate a random key)
ENCRYPTION_KEY=""